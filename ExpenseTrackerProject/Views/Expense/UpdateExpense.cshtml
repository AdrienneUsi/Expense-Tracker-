@model Expense

<h2>Update @Model.Expense_ID</h2>

@using (Html.BeginForm("UpdateExpenseToDatabase", "Expense", "Post"))
    {
    <input asp-for="Category_name" type="hidden" value="@Model.Category_name" />

    <label asp-for="Category_name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Category_name" />

    <label asp-for="Amount" class="control-label">Amount</label>
    <input type="number" step="0.01" name="Amount" class="form-control" value="@Model.Amount" />

    <input type="submit" value="Update Expense" class="btn btn-primary" />

    }