@model Expense

<h2>Create a New Expense</h2>



@using (Html.BeginForm("InsertExpenseToDatabase", "Expense", "Post"))
{
    <input asp-for="Expense_ID" type="hidden" value="" />

    <label asp-for="Category_name" class="control-label">Category_name</label>
    <input type="text" name="Category_name" class="form-control" value="" />

    <label asp-for="Amount" class="control-label">Amount</label>
    <input type="number" step="0.01" name="Amount" class="form-control" />

    <label asp-for="Date_Of_Expense" class="control-label">Date Of Expense</label>
    <input type="date" step="0.01" name="Date_Of_Expense" class="form-control" value="@Model.Date_Of_Expense" />

    <label asp-for="Description" class="control-label">Description</label>
    <input type="text" name="Description" class="form-control" value="@Model.Description" />

    <label asp-for="Payment_Method" class="control-label">Payment Method</label>
    <input type="text" name="Payment_Method" class="form-control" value="@Model.Payment_Method" />

    <input type="submit" value="Create Expense" class="btn btn-primary" />

}

